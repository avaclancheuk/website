extends _templates/default

block meta
  meta(name='robots', content='noindex,nofollow')

block append stylus
  include:stylus(compress=true) css/_branding.styl

block header

block content
  svg.hidden
    defs
      lineargradient(id='gradient', x1='0', y1='0', x2='100%', y2='100%')
        stop(offset='0', stop-color='#8560a8')
        stop(offset='30%', stop-color='#5674b9')
        stop(offset='100%', stop-color='#02fa9c')

  - var n = 0
  .grid.grid--gutterless
    while n < 12
      - n++
      .grid__item.one-half.brand(class='brand--' + n)
        .brand__container
          include img/logo.svg

block footer
